{
    "ecmaFeatures": {
        "classes": true,
        "generators": true
    },
    "extends": "airbnb/base",
    "rules": {
        "comma-dangle": [2, "never"],
        "func-names": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "max-len": 0,
        "no-multi-spaces": 0,
        "no-param-reassign": 0,
        "no-var": 0,
        "object-shorthand": 1,
        "prefer-const": 2,
        "quote-props": [2, "as-needed"],
        "vars-on-top": 0,
        "key-spacing": 0,
        "new-cap": [ 2, { "capIsNewExceptions": ["ObjectId"] }]
    },
    "globals": {
        "describe": true,
        "it": true,
        "db": true,
        "ObjectId": true
    },
    "env": {
        "es6": true,
        "node": true
    }

}

